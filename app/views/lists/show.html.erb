<h1><%= @list.name %></h1>
<p>
  <% @bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <%= bookmark.movie.poster_url %>
  <%= bookmark.comment %>
  <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "#{bookmark.movie.title}?" } do  %>
    <i class="fa-solid fa-trash"></i>
     <% end %>
  <% end %>
</p>
<%= link_to 'Add bookmark',  new_list_bookmark_path(@list) %>
<%= link_to 'back',  lists_path%>
